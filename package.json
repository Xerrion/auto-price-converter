{
  "name": "auto-price-converter",
  "version": "3.0.0",
  "description": "A browser extension that automatically converts prices on websites to your chosen currency",
  "type": "module",
  "scripts": {
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "build": "bun run build:chrome && bun run build:firefox",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "zip": "bun run zip:all",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:all": "wxt zip -b chrome && wxt zip -b firefox",
    "test": "vitest",
    "test:run": "vitest run",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "generate-icons": "bun run scripts/generate-icons.ts",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.563.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.1.36",
    "@types/jsdom": "^27.0.0",
    "@types/jsonld": "^1.5.15",
    "@types/node": "^25.0.10",
    "@wxt-dev/module-svelte": "^2.0.4",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "jsdom": "^28.0.0",
    "mode-watcher": "^1.1.0",
    "sharp": "^0.34.5",
    "svelte": "^5.19.0",
    "svelte-check": "^4.1.4",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wxt": "^0.20.14"
  },
  "dependencies": {
    "@fontsource-variable/public-sans": "^5.2.7",
    "class-variance-authority": "^0.7.1",
    "currency.js": "^2.0.4",
    "findandreplacedomtext": "^0.4.6",
    "jsonld": "^9.0.0"
  }
}
