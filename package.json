{
  "name": "auto-price-converter",
  "version": "2.0.0",
  "description": "A Chrome extension template using Svelte and TypeScript",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "generate-icons": "bun run scripts/generate-icons.ts",
    "changeset": "changeset",
    "sync:manifest": "bun run scripts/sync-manifest-version.ts",
    "version": "changeset version && bun run sync:manifest",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@crxjs/vite-plugin": "^2.0.0-beta.33",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.561.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.0.10",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "mode-watcher": "^1.1.0",
    "sharp": "^0.33.0",
    "svelte": "^5.19.0",
    "svelte-check": "^4.1.4",
    "svelte-sonner": "^1.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fontsource-variable/public-sans": "^5.2.7",
    "class-variance-authority": "^0.7.1",
    "currency.js": "^2.0.4",
    "findandreplacedomtext": "^0.4.6",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "sonner": "^2.0.7"
  }
}
